
<h1 class="text-center">My Bookings</h1>
<div class="booking_container">
<div>
<% @bookings.each do |booking| %>
  <div class="card m-1" style="width: 20rem;">
  <img src="<%= booking.car.photo_url %>" class="card-img-top" alt="...">

    <div class="card-body">
    <div class="d-flex justify-content-between">
      <h5 class="card-title text-uppercase fw-bold"><%= booking.car.brand %></h5>
      <h5 class="card-title text-uppercase fw-bold"><%= booking.car.model %></h5>
      <hr>
      <p class="card-title text-center"><%= booking.date_start %></p>
      <p class="card-title text-center"><%= booking.date_end %></p>
      </div>
    </div>
    <%= link_to "Check this car", booking_path(:id => booking.id), :class => "btn btn-secondary" %>
  </div>
  </div>
<%end%>
</div>
</div>
