
<div class="car-container">
  <div>
    <%= @car.brand %> <%= @car.model %>



    <%= @car.fuel %>



    <%= @car.gearbox %>


    <img src="<%= @car.photo_url %>" width= 600px alt="">
  </div>

  <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>

<div>
    <h2><%= @car.price %> â‚¬</h2>
</div>

<div>
  <%= simple_form_for [@car, @booking] do |f| %>
    <%= f.input :date_start, as: :string, required: false, input_html: {id: "range_start"} %>
    <%= f.input :date_end, as: :string, required: false, input_html: {id: "range_end"} %>
    <%= f.button :submit %>
  <% end %>
</div>
